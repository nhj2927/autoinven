<!DOCTYPE html>
<html lang="<%= __('locale') %>">
  <head>
    <meta charset="UTF-8" />
    <%- include('./head') %>
    <link rel="stylesheet" href="/css/main.css" />
    <title>Main</title>
  </head>
  <body>
    <header><%- include('./partial/navbar') %></header>
    <div class="main">
      <h1 class="title">
        <%= __('main_title') %>
        <br />
        <%= __('main_title1') %>
      </h1>

      <p class="slogan">
        <%= __('main_slogan') %>
        <br />
        <%= __('main_slogan1') %>
        <br />
        <%= __('main_slogan2') %>
      </p>

      <div class="swiper swiper1" style="margin-top: 3rem">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <img src="image/slide_1.png" />
          </div>
          <div class="swiper-slide">
            <img src="image/slide_2.png" />
          </div>
          <div class="swiper-slide">
            <img src="image/slide_3.png" />
          </div>
        </div>
      </div>
    </div>

    <div class="search">
      <a class="title" href="search"><%= __('main_title_search') %></a>
      <img src="image/icon/search_icon.svg" alt="search" />
    </div>
    <div class="warehouse">
      <h2 class="title"><%= __('main_text1') %></h2>
      <p class="content">
        <%= __('main_text2') %>
        <br />
        <%= __('main_text2-1') %>
      </p>
      <a class="more" href="search"><%= __('main_text3') %></a>
      <!-- Slider main container -->
      <div class="swiper swiper2">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
          <% for(let i = 0; i < warehouses.length; i++) { %>
          <div class="swiper-slide list">
            <div class="card">
              <% if(warehouses[i].image) { %>
              <img class="img" src="<%= warehouses[i].image %>" />
              <% } else { %>
              <img class="img" src="image/default-image.png" />
              <% } %>
              <div class="wh_info">
                <h4 class="name"><%= warehouses[i].name %></h4>
                <div
                  style="
                    display: flex;
                    flex-direction: column;
                    justify-content: space-between;
                    height: 20rem;
                  "
                >
                  <div>
                    <div class="category">
                      <%= __('main_type') %>: <%= warehouses[i].category %>
                    </div>
                    <div class="address">
                      <%= __('main_location') %>: <%= warehouses[i].address %>
                    </div>
                  </div>
                  <a
                    href="warehouse/<%=warehouses[i].warehouse_id%>"
                    class="detail"
                    ><%= __('main_more') %></a
                  >
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div style="color: #7c139a" class="swiper-button-prev"></div>
        <div style="color: #7c139a" class="swiper-button-next"></div>
      </div>
    </div>
    <div class="enroll">
      <h2 class="title"><%= __('main_text4') %></h2>
      <p class="content">
        <%= __('main_text5') %>
        <br />
        <%= __('main_text5-1') %>
      </p>
      <div class="btn" onclick="Inqurey()"><%= __('main_text6') %></div>
      <script>
        Inqurey = () => {
          Swal.fire({
            title: 'AUTOINVEN',
            html: `<%= __('main_phone') %> 1644-1393, <br> service@autoinven.com`,
            icon: 'info',
          });
        };
      </script>
    </div>
    <div class="info">
      <h2 class="title">
        <%= __('main_text7') %>
        <br />
        <%= __('main_text7-1') %>
      </h2>
      <div class="content">
        <div class="card">
          <img class="img" src="image/ico_1.svg" alt="info" />
          <%= __('main_text8') %>
          <br />
          <%= __('main_text8-1') %>
        </div>
        <div class="card">
          <img class="img" src="image/ico_2.svg" alt="info" />
          <%= __('main_text9') %>
          <br />
          <%= __('main_text9-1') %>
        </div>
        <div class="card">
          <img class="img" src="image/ico_3.svg" alt="info" />
          <%= __('main_text10') %>
          <br />
          <%= __('main_text10-1') %>
        </div>
        <div class="card">
          <img class="img" src="image/ico_4.svg" alt="info" />
          <%= __('main_text11') %>
          <br />
          <%= __('main_text11-1') %>
        </div>
        <div class="card">
          <img class="img" src="image/ico_5.svg" alt="info" />
          <%= __('main_text12') %>
          <br />
          <%= __('main_text12-1') %>
        </div>
        <div class="card">
          <img class="img" src="image/ico_6.svg" alt="info" />
          <%= __('main_text13') %>
          <br />
          <%= __('main_text13-1') %>
        </div>
      </div>
    </div>
    <div class="signup">
      <h2 class="title">
        <%= __('main_text14') %>
        <br />
        <%= __('main_text14-1') %>
      </h2>
      <a class="btn" href="signup"> <%= __('main_text15') %> </a>
    </div>
    <div class="autoinven">
      <img class="img" src="image/inven_logo.png" alt="logo" />
    </div>
    <footer><%- include('./partial/footer') %></footer>
  </body>
  <script>
    const swiper_title = new Swiper('.swiper1', {
      // Optional parametersq
      direction: 'horizontal',
      loop: true,
      autoplay: {
        delay: 5000,
      },
    });
    const swiper = new Swiper('.swiper2', {
      // Optional parameters
      direction: 'horizontal',
      loop: true,
      spaceBetween: 10,

      //for centered slide
      slidesPerView: 4,

      //pagination
      pagination: {
        el: '.swiper-pagination',
      },
      // Navigation arrows
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
    });
  </script>
</html>
